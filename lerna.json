{
  "version": "independent",

  "npmClient": "npm",

  "packages": [
    "packages/*"
  ],

  "ignoreChanges": [
    "**/*.md"
  ],

  "command": {
    "bootstrap": {
      "hoist": true,
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "access": "public",
      "allowBranch": [
        "release",
        "release/*",
        "feature/*"
      ],
      "conventionalCommits": true,
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org"
    }
  }
}
